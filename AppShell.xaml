<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CRM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CRM"
    Title="CRM">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            Icon="home.png"
            />
        <ShellContent
            Title="Calendar"
            ContentTemplate="{DataTemplate local:CalendarPage}"
            Route="CalendarPage"
            Icon="calendar.png"
            />
        <ShellContent
            Title="Jobs"
            ContentTemplate="{DataTemplate local:JobsPage}"
            Route="JobsPage"
            Icon="jobs.png"
            />
        <ShellContent
            Title="Customers"
            ContentTemplate="{DataTemplate local:CustomerPage}"
            Route="CustomerPage"
            Icon="customer.png"
            />
    </TabBar>

</Shell>
